rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function: check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // All collections require authentication
    // For MVP: single admin user
    // For production: consider hardcoding admin UID
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }

    // Optional: Stricter rule for production with specific admin UID
    // Uncomment and replace 'YOUR_ADMIN_UID' with your actual UID
    // match /{document=**} {
    //   allow read, write: if request.auth != null && request.auth.uid == 'YOUR_ADMIN_UID';
    // }
  }
}
