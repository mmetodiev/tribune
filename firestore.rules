rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function: check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Articles collection: public read access for home page, only functions can write
    match /articles/{articleId} {
      allow read: if true; // Public access for NewsView
      allow write: if false; // Only Firebase Functions can write
    }

    // Sources collection: authenticated users can read, only functions can write
    match /sources/{sourceId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Firebase Functions can write
    }

    // Fetch logs collection: authenticated users can read, only functions can write
    match /fetchLogs/{logId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Firebase Functions can write
    }

    // Categories collection (deprecated but keeping for backward compatibility)
    match /categories/{categoryId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Firebase Functions can write
    }

    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
